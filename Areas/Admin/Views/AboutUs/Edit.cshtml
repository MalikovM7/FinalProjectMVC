@model FinalProjectMVC.ViewModels.Admin.AboutUs.AboutUsVM

<div class="container mt-5">
    <h1 class="text-center">Edit About Us</h1>

    <form asp-action="Edit" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label for="Title">Title</label>
            <input asp-for="Title" class="form-control" id="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label for="Subtitle">Subtitle</label>
            <input asp-for="Subtitle" class="form-control" id="Subtitle" />
            <span asp-validation-for="Subtitle" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" id="Description" rows="5"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group mt-3">
            <label for="Points">Key Points (comma-separated)</label>
            <input asp-for="Points" class="form-control" id="Points" />
            <span asp-validation-for="Points" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label for="ImageUrls">Image URLs (comma-separated)</label>
            <input asp-for="ImageUrls" class="form-control" id="ImageUrls" />
            <span asp-validation-for="ImageUrls" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success mt-3">Save Changes</button>
        <a asp-action="Index" class="btn btn-outline-danger mt-3">Cancel</a>
    </form>
</div>