@model IEnumerable<FinalProjectMVC.ViewModels.Admin.FAQ.FAQVM>

<div class="container mt-5">
    <h1 class="text-center">Manage FAQs</h1>

    <a asp-action="Create" class="btn btn-primary mb-4">Add New FAQ</a>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Question</th>
                <th scope="col">Answer</th>
                <th scope="col" class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var faq in Model)
                {
                    <tr>
                        <td>@faq.Id</td>
                        <td>@faq.Question</td>
                        <td>@faq.Answer</td>
                        <td class="text-center">
                            <a asp-action="Details" asp-route-id="@faq.Id" class="btn btn-info btn-sm">Details</a>
                            <a asp-action="Edit" asp-route-id="@faq.Id" class="btn btn-warning btn-sm mx-1">Edit</a>
                            <form asp-action="Delete" asp-route-id="@faq.Id" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="4" class="text-center text-muted">No FAQs available. Please add new FAQs.</td>
                </tr>
            }
        </tbody>
    </table>
</div>

