@model FinalProjectMVC.ViewModels.Admin.HomePreview.PreviewVM

<div class="container mt-5">
    <h1 class="text-center">Preview Details</h1>

    <div class="card mt-4">
        <div class="card-body">
            <h4 class="card-title">Title</h4>
            <p class="card-text">@Model.Title</p>

            <h4 class="card-title mt-4">Description</h4>
            <p class="card-text">@Model.Description</p>

            <h4 class="card-title mt-4">Image</h4>
            <img src="@Model.ImagePath" alt="@Model.Title" class="img-fluid">
        </div>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>
</div>