@model AdjustRolesVM
<div class="container mt-5">
    <h1 class="text-center">Adjust Roles</h1>

    <form asp-action="AdjustRoles" method="post">
        <div class="form-group">
            <label for="UserId">Select User</label>
            <select asp-for="UserId" asp-items="@(new SelectList(Model.Users, "Id", "UserName"))" class="form-control" id="UserId">
                <option value="">-- Select a user --</option>
            </select>
        </div>

        <div class="form-group mt-3">
            <label for="RoleId">Assign Role</label>
            <select asp-for="SelectedRole" asp-items="@(new SelectList(Model.Roles.Select(r => r.Name).Distinct()))" class="form-control" id="RoleId">
                <option value="">-- Select a role --</option>
            </select>
        </div>

        <button type="submit" class="btn btn-warning mt-3">Save Changes</button>
        <a asp-action="Index" class="btn btn-outline-danger mx-2 mt-3">Cancel</a>

    </form>
</div>