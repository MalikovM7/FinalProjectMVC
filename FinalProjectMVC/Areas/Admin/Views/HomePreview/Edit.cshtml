@model FinalProjectMVC.ViewModels.Admin.HomePreview.PreviewVM

<div class="container mt-5">
    <h1 class="text-center">Edit Home Preview</h1>

    <form asp-action="Edit" method="post" class="mt-4">
        <input type="hidden" asp-for="Id" />

        <div class="form-group">
            <label for="Title">Title</label>
            <input asp-for="Title" class="form-control" id="Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label for="Description">Description</label>
            <textarea asp-for="Description" class="form-control" id="Description" rows="5"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label for="ImagePath">Image Path</label>
            <input asp-for="ImagePath" class="form-control" id="ImagePath" />
            <span asp-validation-for="ImagePath" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success mt-3">Save Changes</button>
        <a asp-action="Index" class="btn btn-outline-danger mt-3">Cancel</a>
    </form>
</div>