@using FinalProjectMVC.ViewModels.Account
@model RegisterVM

<div class="container mt-5">
    <h1 class="text-center">Register</h1>
    <div class="register-area">

        @if (!ViewData.ModelState.IsValid)
        {
            <div class="card-body">
                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
            </div>
        }

        <form asp-controller="Account" asp-action="Register" method="post" class="register-form">

            <label>
                <p class="label-txt">ENTER YOUR EMAIL</p>
                <input asp-for="@Model.Email" type="text" class="input">
                <div class="line-box">
                    <div class="line"></div>
                </div>
                <span asp-validation-for="@Model.Email" style="text-align:left !important; display:block" class="text-danger"></span>
            </label>

            <label>
                <p class="label-txt">ENTER YOUR USERNAME</p>
                <input asp-for="@Model.Username" class="input">
                <div class="line-box">
                    <div class="line"></div>
                </div>
                <span asp-validation-for="@Model.Username" style="text-align:left !important; display:block" class="text-danger"></span>
            </label>

            <label>
                <p class="label-txt">ENTER YOUR FULL NAME</p>
                <input asp-for="@Model.FullName" class="input" autocomplete="off">
                <div class="line-box">
                    <div class="line"></div>
                </div>
                <span asp-validation-for="@Model.FullName" style="text-align:left !important; display:block" class="text-danger"></span>
            </label>

            <label>
                <p class="label-txt">ENTER YOUR PASSWORD</p>
                <input asp-for="@Model.Password" class="input">
                <i class="fa-solid fa-eye register-password-eye" style="cursor: pointer; margin-left:90%"></i>
                <i class="fa-solid fa-eye-slash d-none register-password-eye-blind"></i>


                <div class="line-box">
                    <div class="line"></div>
                </div>
                <span asp-validation-for="@Model.Password" style="text-align:left !important; display:block" class="text-danger"></span>
            </label>

            <label>
                <p class="label-txt">CONFIRM YOUR PASSWORD</p>
                <input asp-for="@Model.ConfirmPassword" class="input">
                <i class="fa-solid fa-eye register-password-eye" style="cursor: pointer; margin-left:90%"></i>
                <i class="fa-solid fa-eye-slash d-none register-password-eye-blind"></i>


                <div class="line-box">
                    <div class="line"></div>
                </div>
                <span asp-validation-for="@Model.ConfirmPassword" style="text-align:left !important; display:block" class="text-danger"></span>
            </label>

            <a asp-controller="Account" asp-action="Login" class="mx-2">Login</a>

            <button type="submit">Register</button>
        </form>
    </div>
</div>