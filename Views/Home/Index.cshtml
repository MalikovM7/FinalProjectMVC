                <i class="fa-solid fa-location-dot"></i>
            </div>
            <div class="feature-text">
                <h3>LOTS OF LOCATIONS</h3>
            </div>
        </div>
    </div>





        <div class="info-container">
            <div class="info-content">
                <h2>@Model.Title</h2>
                <h1>@Model.Subtitle</h1>
                <p>@Model.Description</p>
                <ul>
                    @if (Model.Points != null && Model.Points.Any())
                    {
                        @foreach (var point in Model.Points)
                        {
                            <li>✔ @point</li>
                        }
                    }
                    else
                    {
                        <li>No points available.</li>
                    }
                </ul>
                <div class="info-buttons">
                    <a href="/vehicles" class="btn-red">SEE ALL VEHICLES</a>
                    <a href="/reservation" class="btn-black">RESERVATION NOW</a>
                </div>
            </div>

            <div class="simple-slider">
                <div class="simple-slides">
                    @if (Model.ImageUrls != null && Model.ImageUrls.Any())
                    {
                        @foreach (var imageUrl in Model.ImageUrls)
                        {
                            <img src="@imageUrl" alt="Slider Image">
                        }
                    }
                    else
                    {
                        <p>No images available.</p>
                    }
                </div>
                <button class="prev" onclick="prevSlide()">&#10094;</button>
                <button class="next" onclick="nextSlide()">&#10095;</button>
            </div>
        </div>

















