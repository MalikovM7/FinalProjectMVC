

<body>
   
<main> 
    

<!-- First form of the page -->

    <div class="deals-container">
            @foreach (var preview in Model)
            {
                <div class="deals-text">
                    <h1>@preview.Title</h1>
                    <h2>@preview.Description </h2>
                </div>
                <div class="car-image">
                    @if (!string.IsNullOrEmpty(preview.ImagePath))
                    {
                        <img src="@preview.ImagePath" alt="Car" class="car-img">
                    }
                </div>
            }
        <div class="search-container">
            <div class="search-header">
                <h3>Search for Cheap Rental Cars Wherever You Are</h3>
            </div>
            <div class="search-form">
                <div class="form-group">
                    <label for="pickup-location">Picking Up Location</label>
                    <input type="text" id="pickup-location" placeholder="Airport or Anywhere">
                </div>
                <div class="form-group">
                    <label for="dropoff-location">Dropping Off Location</label>
                    <input type="text" id="dropoff-location" placeholder="Airport or Anywhere">
                </div>
                <div class="form-group">
                    <label for="pickup-date">Picking Up Date</label>
                    <input type="date" id="pickup-date">
                </div>
                <div class="form-group">
                    <label for="pickup-hour">Picking Up Hour</label>
                    <input type="time" id="pickup-hour">
                </div>
                <div class="form-group">
                    <label for="dropoff-date">Dropping Off Date</label>
                    <input type="date" id="dropoff-date">
                </div>
                <div class="form-group">
                    <label for="dropoff-hour">Dropping Off Hour</label>
                    <input type="time" id="dropoff-hour">
                </div>
                <div class="form-group">
                    <button id="find-car">FIND CAR</button>
                </div>
                <div class="advanced-search">
                    <a href="#">Advanced Search</a>
                </div>
            </div>
        </div>
    </div>
           

 


      <div class="features-container">
        <div class="feature-item">
