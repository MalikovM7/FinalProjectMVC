<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Rent It</title>
    <script src="https://kit.fontawesome.com/1154e1d6ee.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="~/assets/js/home.js" defer></script>
    <link rel="stylesheet" href="~/assets/css/home.css">
    <style>
        /* Ensure the header stays fixed at the top */
        .header-container {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            z-index: 1030; /* Ensure it stays above other elements */
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        body {
            padding-top: 80px; /* Offset for the fixed header */
        }
    </style>
</head>
<body>
    <div class="header-container">
        <header class="d-flex align-items-center justify-content-between px-4 py-2">
            <div class="logo">
                <img src="https://jthemes.net/themes/html/rentit/assets/img/logo-rentit.png" alt="Rent It Logo">
            </div>
            <nav>
                <ul class="nav">
                    <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Vehicle" asp-action="Vehicle">Vehicles</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Blog" asp-action="Index">Blog</a></li>
                    <li class="nav-item"><a class="nav-link" asp-controller="Contact" asp-action="Index">Contact</a></li>
                    <li class="nav-item"><a class="nav-link" href="https://www.facebook.com" target="_blank"><i class="fa fa-facebook"></i></a></li>
                    <li class="nav-item"><a class="nav-link" href="https://www.twitter.com" target="_blank"><i class="fa fa-twitter"></i></a></li>
                    <li class="nav-item"><a class="nav-link" href="https://www.linkedin.com" target="_blank"><i class="fa fa-linkedin"></i></a></li>
                    <li class="nav-item"><a class="nav-link" href="https://www.pinterest.com" target="_blank"><i class="fa fa-pinterest"></i></a></li>
                </ul>
            </nav>
            <div>
                @if (User.Identity.IsAuthenticated)
                {
                    <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                        <span class="nav-profile-name me-2">@User.Identity.Name</span>
                        <button type="submit" class="btn btn-link p-0">Logout</button>
                    </form>
                }
                else
                {
                    <a asp-controller="Account" asp-action="Register" class="btn btn-link me-2">Register</a>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-link">Login</a>
                }
            </div>
        </header>
    </div>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted py-4">
        <div class="footer-content d-flex justify-content-between px-4">
            <div class="contact-form">
                <h2>Get in Touch with Us</h2>
                <form>
                    <input type="text" name="name" placeholder="Name" class="form-control mb-2" required>
                    <input type="email" name="email" placeholder="Email" class="form-control mb-2" required>
                    <input type="text" name="subject" placeholder="Subject" class="form-control mb-2" required>
                    <textarea name="message" placeholder="Message" class="form-control mb-2" required></textarea>
                    <button type="submit" class="btn btn-primary">Send Message</button>
                </form>
            </div>
            <div class="contact-info">
                <p>Address: 1600 Pennsylvania Ave NW, Washington, D.C. DC 20500, USA</p>
                <p>Support Phone: 01865 339665</p>
                <p>Emails: info@example.com</p>
                <p>Working Hours: 09:30-21:00 except on Sundays</p>
                <p><a href="#">View on the Map</a></p>
            </div>
        </div>
        <div class="social-media text-center my-2">
            <a href="#" class="me-2">Facebook</a>
            <a href="#" class="me-2">Twitter</a>
            <a href="#" class="me-2">Pinterest</a>
            <a href="#">Google</a>
        </div>
        <div class="footer-bottom text-center">
            <p>© 2015 Rent It — A One Page Rental Car Theme made with passion by jThemes Studio</p>
        </div>
    </footer>
</body>
</html>
